/*个人主页内层包裹作用的DIV*/
.inner-wrap{
	width:96%;
	margin:10px auto;	
	position:relative;
}
/*个人名片DIV，包含头像和文字信息两个DIV*/
.personal-card{
	float:left;
	width:70%;
	height:200px;
	background-color: rgb(255, 255, 255);
	box-shadow: 1px 1px 3px rgb(204, 204, 204);
}

/*个人头像*/
.personal-card .potrait{
	float:left;
}

.personal-card .potrait a{
	display:block;
	width:162px;
	height:162px;
	margin:1em;
	box-shadow: 0px 0px 1px rgb(170, 170, 170);
}


/*个人信息DIV*/
.personal-card-box{
	float:left;
	width:465px;
	min-height:162px;
	margin:1em 0px;
	background:url(../images/personal-card-box-bg.png);
}

b.big{
	font-size:1.5em;
}

/*名片中每行中显示的信息*/
p.card-info{
	display:block;
	padding-left:10px;
	width:100%;
	height:30px;
	line-height:20px;
	overflow:hidden;
	
}

span.name{
	font-size:20px;
}


.personal-info, span.edit{
	padding-right:15px;
	float:left;
}

span.edit{
	display:none;
}

span.edit:hover{
	cursor:pointer;
}


span.email{
	float:left;
}

span.edit-content{
	/*display:block;*/ /*这里为什么不能加block？*/
	min-width:90px;
	height:19px;
	line-height:19px;
	
}

.motto{
	display:block;
	min-width:50px;
}

span#motto{
	width:20px;
}


/*个人信息修改按钮*/
.personal-card-box.edit{
	width:20px;
}




span.edit-inner{
	float:left;
	margin-left:3px;
}

.img-edit-inner{
	display:block;
	width:20px;
	height:20px;
	background-image:url(../images/edit.png);
	background-repeat:no-repeat;
	background-position:top;
	
}

.img-edit-done{
	display:block;
	width:20px;
	height:20px;
	background-image:url(../images/edit.png);
	background-repeat:no-repeat;
	background-position:bottom;
}




/*个人在网站中的表现DIV*/
.personal-expression{
	float:right;
	width:27%;
	padding-bottom:1em;
	border: 1px solid rgb(238, 238, 238);
	box-shadow: 1px 1px 1px rgb(255, 255, 255) inset, -1px -1px 1px rgb(255, 255, 255) inset;
	color: rgb(170, 170, 170);
}


.personal-expression .join-time{
	padding:0px 1em;
}

.personal-expression ul li{
	display:block;
	width:49%;
	float:left;
	text-align:center;
	background-color: rgb(153, 153, 153);
	color: rgb(255, 255, 255);
}



.profile-nav-wrap{
	width:100%;
	margin-top:1em;
	float:left;
}

.profile-nav{
	width:194px;
	margin-left:387px;
}

.profile-nav a{
	width:77px;
	text-align:center;
	font-size:15px;
}

.profile-nav a:hover{
	background-color: rgb(51, 51, 51);
	color: #FFFFFF;
}

.profile-nav-item{
	float:left;
	margin:0px 5px;
}




/*分割线*/
.dividing-line{
	width:100%;
	float:left;
	height:0.3em;
	
	background-color: rgb(51, 51, 51);
	text-align: center;
	color: #FFFFFF;
	box-shadow: 0px 2px 2px rgb(198, 198, 198);
}

/*时间轴CSS*/

#timeline{
	width:100%;
	min-height:300px;
	float:left;
	
	position:relative;/*非常重要，否则时间轴中间的线无法显示*/
}

#timeline:before {
    position: absolute;
    width: 4px;
    top: 0px;
    left: 50%;
    margin-left: -2px;
    content: "";/*非常重要，否则添加的内容无法显示*/
    height: 100%;
    background: none repeat scroll 0% 0% rgba(17, 17, 22, 0.8);
}


#add-timeline{
	width:45%;
	min-height:150px;
	margin:1em;
	float:left;
	position:relative;
}

p.add-title{
	display:block;
	width:100%;
	margin:5px 0px;
	font-size:1.2em;
	font-weight:bold;
	text-align:center;
	float:left;
}

#add-timeline a{
	display:block;
	width:98px;
	height:98px;
	margin-left:35px;
	float:left;
}

#add-timeline a img{
	max-height:98px;
	max-width:98px;
	float:left;
}

#add-timeline a p{
	text-align:center;
	width:100%;
	float:left;
}


#timeline-inner{
	width:100%;
	height:100%;
	float:left;
}




.timeline-content{
	width:50%;
	min-height:300px;
	float:left;
}



.inner{
	width:95.6%;
	min-height:270px;
	border:1px solid #b4bbcd;
	margin:2.1%;
	background:white;
	position:relative;
}

.inner .exp-title{
	font-size:1.2em;
	font-weight:bold;
	padding:0px 1em;
	color: rgb(13, 164, 211);
}

.inner .essay-metas{
	padding:0px 1em;
}

.inner .essay-metas .right{
	margin-right:10%;
}

.inner .exp-abstract{
	margin:0px 1em;
	width:93.5%;
	overflow:hidden;
	float:left;
	
}

span.leftCorner, span.rightCorner{
	display:block;
	position:absolute;
	width:13px;
	height:15px;
	top:10px;
	z-index:100;
}

span.leftCorner{
	left:-13px;
	background:url(../images/left.gif);
}

span.rightCorner{
	right:-13px;
	background:url(../images/right.gif);
}

br.clear{
	clear:both;
}

/*myWorks页面CSS*/
#my-works{
	width:100%;
	min-height:300px;
	float:left;
}

#my-works .inner{
	width:66%;
	height:100%;
	border:0px;
	margin:0px auto;
}
