*{
	margin:0px;
	padding:0px;}
	
body {
    font-family:'Arial',Helvetica,Arial,sans-serif;
    color: rgb(82, 82, 82);
}

#web{
	width:100%;
	margin-left:auto;
	margin-right:auto;}


#bghead{
	width:100%;
	height:57px;
	float:left;
	background:rgb(34,34,34);
}

#header{
	width:940px;
	height:57px;
	margin:0px auto;
	font-family: '微软雅黑','Helvetica Neue',Helvetica,Arial,sans-serif !important;
	font-size:14px;
	position:relative;
	}
	
#nav{
	height:57px;
	position:relative;}

	
#nav ul{
	display:block;
	left:230px;
	position:relative;}
	
#nav ul li{
	display:block;
	list-style-type:none;
	height:57px;
	float:left;
	}
	
#nav ul li a{
	display:block;
	color:#FFFFFF;
	text-decoration:none;
	padding:0px 20px;
	height:57px;
	line-height:57px;
	}
	
#nav ul li a:hover{
	color:rgb(255,255,255);
	background:rgb(51, 157, 210);}
	
#nav ul li a:active{
	background:rgb(13,164,211);}
	
#logo{
	width:200px;
	height:57px;
	background:url(../images/logo.png);
	left:0px;
	position:absolute;
	z-index:100;}
	
#container{
	width:100%;
	float:left;
	position:relative;}
	
	
#content{
	width:945px;
	margin:30px auto 0px auto;
	color:black;
	line-height:30px;
	font-size:20px;
	position:relative;
}

#content input{
	font-size:14px;
	width:70px;
}

#content .title{
	width:200px;
	height:30px;
}