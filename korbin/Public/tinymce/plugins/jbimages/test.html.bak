 <body>
	<input id="test" value=""/>
 </body>
 <script>
	var test = document.getElementById("test");

	test.onblur = function(){
		var pattern = /[0-9]+/g;

		if(pattern.test(test.value)){
			test.style.color = "red";
		}
		else{
			test.style.color = "black";
		};
	}
	
 </script>
</html>
